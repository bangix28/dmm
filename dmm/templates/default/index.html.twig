
{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}

    <main class="container">
        <div class="col-10 mx-auto p-3 mt-5 border rounded">
            {{ include('Profil/_form.html.twig') }}
        </div>
        <div>
            {% for post in post %}
                <article class="col-10 mx-auto mt-5 border rounded p-3">
                    <div class="row col-6">
                        <img src="{{ asset('build/images/user.png') }}" class="rounded-circle  img-fluid align-items-top" style="max-height: 50px;"  alt="User image">
                        <p class="ml-1">
                           <a href="{{ path('profil', {'id': post.user.id}) }}">{{ post.user.firstName }} {{ post.user.lastName }}</a>
                            posté le {{ post.createdAt|date('d/m/y')}} à {{ post.createdAt|date('h:II') }}
                        </p>

                    </div>
                    <div class="col-10  mx-auto">
                        <p>{{ post.content |raw }}</p>
                    </div>
                    <div class="col-12 row">
                        <div class="col-4">
                            <a href="#">
                                <i> {{ post.like1 }} like </i>
                            </a>
                        </div>
                        <div class="col-4">
                            <a href="#">
                                <i> {{ post.comment }} comment </i>
                            </a>
                        </div>
                        <div class="col-4">
                            <a href="#">
                                <i> {{ post.share }} share </i>
                            </a>
                        </div>
                    </div>
                </article>
            {% endfor %}
        </div>
    </main>
{% endblock %}
